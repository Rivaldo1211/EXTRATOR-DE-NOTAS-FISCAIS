import pdfplumber

def extract_text_from_pdf(pdf_path):
    text = ""

    try:
        with pdfplumber.open(pdf_path) as pdf:
            for page in pdf.pages:
                content = page.extract_text()
                if content:
                    text += content + "\n"

    except Exception as e:
        text = f"Erro ao ler PDF: {str(e)}"

    return text